---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
const allProjects = await getCollection("projects");
const pageTitle = "Works";
---

<Layout pageTitle={pageTitle}>
    <div class="gif">
        <img
            width="300"
            height="259"
            alt="RaccoonLaptopGif"
            src="/laptop.webp"
        />
    </div>
    <hr />
    <p>Oh great you are intrested in seeing my works cool ! have a look</p>
    <hr />
    <h2>Projects</h2>
    <ul role="list" class="link-card-grid">
        {
            allProjects.map((card) => (
                <Card
                    url={`/projects/${card.slug}/`}
                    image={card.data.image.url}
                    title={card.data.title}
                    body={card.data.description}
                />
            ))
        }
    </ul>
</Layout>
